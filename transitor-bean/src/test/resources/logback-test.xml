<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{HH:mm:ss.SSS} %-5level %logger{10}[%thread,%method,%line]
				- %msg%n</pattern>
		</layout>
	</appender>
	<logger name="com.godmonth.status">
		<level value="trace" />
	</logger>
	<root>
		<level value="info" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
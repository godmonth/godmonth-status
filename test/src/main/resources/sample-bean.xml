<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <bean id="sampleModelExecutor"
          class="com.godmonth.status.executor.impl.DefaultOrderExecutor"
          p:advancerMappings-ref="sampleModelAdvancerMappings"
          p:txStatusTransitor-ref="sampleModelStatusTransitor">
        <property name="modelAnalysis">
            <bean class="com.godmonth.status.executor.impl.analysis.SimpleBeanModelAnalysis"
                  p:modelClass="com.godmonth.status.test.sample.domain.SampleModel"/>
        </property>
    </bean>

    <bean id="sampleModelAdvancerMappings"
          class="com.godmonth.util.collections.List2MapFactoryBean"
          p:propertyPath="key">
        <property name="sourceList">
            <list value-type="java.lang.Object">
                <bean class="com.godmonth.status.test.sample.machine.advancer.PayAdvancer"/>
                <bean class="com.godmonth.status.test.sample.machine.advancer.CheckAdvancer"/>
            </list>
        </property>
    </bean>
    <bean id="statusRepositoryStatusTransitor" abstract="true"
          class="com.godmonth.status.transitor.tx.impl.TxStatusTransitorImpl"
          p:transactionOperations-ref="transactionTemplate">
        <property name="modelMerger">
            <bean class="com.godmonth.status.transitor.tx.impl.jpa.AutowiredEntityManagerMergerImpl"/>
        </property>
    </bean>

    <bean id="sampleModelStatusTransitor"
          parent="statusRepositoryStatusTransitor" p:statusPropertyName="status">
        <property name="statusTransitor">
            <bean class="com.godmonth.status.transitor.definition.impl.StringJsonDefinitionBuilder"
                  factory-method="buildTransitor">
                <constructor-arg value="classpath:/sample-status.json"/>
                <constructor-arg value="com.godmonth.status.test.sample.domain.SampleStatus"/>
            </bean>
        </property>
        <property name="statusEntryMap">
            <map>
                <entry>
                    <key>
                        <util:constant static-field="com.godmonth.status.test.sample.domain.SampleStatus.CREATED"/>
                    </key>
                    <bean class="com.godmonth.status.test.sample.machine.entry.EchoStatusEntry"/>
                </entry>
            </map>
        </property>
    </bean>


</beans>

    <bean id="sampleModelAnalysis" class="com.godmonth.status.analysis.impl.AnnotationBeanModelAnalysis"
          p:modelClass="com.godmonth.status.test.sample.domain.SampleModel"/>

    <bean id="sampleModelExecutor" class="com.godmonth.status.executor.impl.DefaultOrderExecutor"
          p:advancerMappings-ref="sampleModelAdvancerMappings" p:txStatusTransitor-ref="sampleModelStatusTransitor"
          p:modelAnalysis-ref="sampleModelAnalysis"/>

    <bean id="sampleModelAdvancerMappings" class="com.godmonth.util.collections.List2MapFactoryBean"
          p:propertyPath="key">
        <property name="sourceList">
            <list value-type="java.lang.Object">
                <bean class="com.godmonth.status.test.sample.machine.advancer.PayAdvancer"/>
                <bean class="com.godmonth.status.test.sample.machine.advancer.CheckAdvancer"/>
            </list>
        </property>
    </bean>
    <bean id="statusRepositoryStatusTransitor" abstract="true"
          class="com.godmonth.status.transitor.tx.impl.TxStatusTransitorImpl"
          p:transactionOperations-ref="transactionTemplate">
        <property name="modelMerger">
            <bean class="com.godmonth.status.transitor.tx.impl.jpa.EntityManagerMergerImpl" autowire="byType"/>
        </property>
    </bean>

    <bean id="sampleModelStatusTransitor"
          parent="statusRepositoryStatusTransitor" p:modelAnalysis-ref="sampleModelAnalysis">
        <property name="statusTransitor">
            <bean class="com.godmonth.status.transitor.core.impl.SimpleStatusTransitor">
                <constructor-arg>
                    <bean class="com.godmonth.status.builder.transitor.JsonDefinitionFactoryBean"
                          p:statusClass="com.godmonth.status.test.sample.domain.SampleStatus"
                          p:triggerClass="com.godmonth.status.test.sample.machine.trigger.SampleTrigger"
                          p:resource="classpath:/sample-status.json"/>
                </constructor-arg>
            </bean>
        </property>
        <property name="statusEntryFunction">
            <bean class="com.google.common.base.Functions" factory-method="forMap">
                <constructor-arg>
                    <map>
                        <entry>
                            <key>
                                <util:constant
                                        static-field="com.godmonth.status.test.sample.domain.SampleStatus.PAID"/>
                            </key>
                            <bean class="com.godmonth.status.test.sample.machine.entry.EchoStatusEntry"/>
                        </entry>
                    </map>
                </constructor-arg>
                <constructor-arg>
                    <null/>
                </constructor-arg>
            </bean>
        </property>
    </bean>


</beans>

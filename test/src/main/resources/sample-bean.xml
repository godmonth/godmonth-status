<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    <bean id="sampleModelAnalysis" class="com.godmonth.status.analysis.impl.SimpleBeanModelAnalysis"
          p:modelClass="SampleModel" p:statusPropertyName="status">
        <property name="predicateList">
            <bean class="com.godmonth.status.analysis.impl.TypeFieldPredicate" p:propertyName="type"
                  p:expectedValue="test"/>
        </property>
    </bean>
    <bean id="sampleModelExecutor" class="com.godmonth.status.executor.impl.DefaultOrderExecutor"
          p:advancerMappings-ref="sampleModelAdvancerMappings" p:txStatusTransitor-ref="sampleModelStatusTransitor"
          p:modelAnalysis-ref="sampleModelAnalysis"/>

    <bean id="sampleModelAdvancerMappings"
          class="com.godmonth.util.collections.List2MapFactoryBean"
          p:propertyPath="key">
        <property name="sourceList">
            <list value-type="java.lang.Object">
                <bean class="com.godmonth.status.test.sample.machine.advancer.PayAdvancer"/>
                <bean class="com.godmonth.status.test.sample.machine.advancer.CheckAdvancer"/>
            </list>
        </property>
    </bean>
    <bean id="statusRepositoryStatusTransitor" abstract="true"
          class="com.godmonth.status.transitor.tx.impl.TxStatusTransitorImpl"
          p:transactionOperations-ref="transactionTemplate">
        <property name="modelMerger">
            <bean class="com.godmonth.status.transitor.tx.impl.jpa.EntityManagerMergerImpl" autowire="byType"/>
        </property>
    </bean>

    <bean id="sampleModelStatusTransitor"
          parent="statusRepositoryStatusTransitor" p:modelAnalysis-ref="sampleModelAnalysis">
        <property name="statusTransitor">
            <bean class="StringJsonDefinitionBuilder"
                  factory-method="buildTransitor">
                <constructor-arg value="classpath:/sample-status.json"/>
                <constructor-arg value="status.test.sample.SampleStatus"/>
            </bean>
        </property>
        <property name="statusEntryMap">
            <map>
                <entry>
                    <key>
                        <util:constant static-field="status.test.sample.SampleStatus.CREATED"/>
                    </key>
                    <bean class="com.godmonth.status.test.sample.machine.entry.EchoStatusEntry"/>
                </entry>
            </map>
        </property>
    </bean>


</beans>
